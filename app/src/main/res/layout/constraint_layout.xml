<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:gravity="right|center"
        android:background="@color/bgColor"
        android:text="@string/_0"
        android:textSize="80sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutButton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.4"
        tools:ignore="RtlHardcoded" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonCE"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/ce"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@id/buttonC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"/>

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/c"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@id/buttonBS"
            app:layout_constraintStart_toEndOf="@id/buttonCE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/buttonBS"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/bs"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintStart_toEndOf="@id/buttonC"
            app:layout_constraintEnd_toStartOf="@id/button_div"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/div"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonBS"
            app:layout_constraintWidth_percent="0.25" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutButton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/numberColor"
            android:text="@string/_7"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@id/button8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/numberColor"
            android:text="@string/_8"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@id/button9"
            app:layout_constraintStart_toEndOf="@id/button7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/numberColor"
            android:text="@string/_9"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintStart_toEndOf="@id/button8"
            app:layout_constraintEnd_toStartOf="@id/button_mul"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/button_mul"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/mul"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button9"
            app:layout_constraintWidth_percent="0.25"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/numberColor"
            android:text="@string/_4"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@id/button5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/numberColor"
            android:text="@string/_5"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@id/button6"
            app:layout_constraintStart_toEndOf="@id/button4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/numberColor"
            android:text="@string/_6"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintStart_toEndOf="@id/button5"
            app:layout_constraintEnd_toStartOf="@id/button_sub"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/button_sub"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/sub"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button6"
            app:layout_constraintWidth_percent="0.25"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutButton3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/numberColor"
            android:text="@string/_1"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/numberColor"
            android:text="@string/_2"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@id/button1"
            app:layout_constraintStart_toEndOf="@id/button3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/numberColor"
            android:text="@string/_3"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintStart_toEndOf="@id/button2"
            app:layout_constraintEnd_toStartOf="@id/button_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/add"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button3"
            app:layout_constraintWidth_percent="0.25"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutButton5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutButton4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintBounds">

        <Button
            android:id="@+id/button_function"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/function"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@id/button0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"/>

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/numberColor"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toStartOf="@id/button_function"
            app:layout_constraintStart_toEndOf="@id/button_dot"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/dot"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintStart_toEndOf="@id/button0"
            app:layout_constraintEnd_toStartOf="@id/button_equal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:backgroundTint="@color/btnColor"
            android:text="@string/equal"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_margin="3dp"
            app:cornerRadius="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_dot"
            app:layout_constraintWidth_percent="0.25"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

